@model List<HastaneProjesi.Models.Clinic>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Clinic List</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Clinic Name</th>
        <th>Clinic Description</th>
        <th>Status</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ClinicID</td>
            <td>@x.ClinicName</td>
            <td>@x.ClinicDescription</td>
            <td>@x.Status</td>
            <td><a href="/Clinic/ClinicDelete/@x.ClinicID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Clinic/ClinicGet/@x.ClinicID" class="btn btn-success">Update</a></td>
            
        </tr>
    }
</table>
<a href="/Clinic/ClinicAdd/" class="btn btn-primary">Add New Clinic</a>