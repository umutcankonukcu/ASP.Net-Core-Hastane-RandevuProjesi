@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model List<HastaneProjesi.Models.Clinic>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Localizer["ClinicList"]</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>@Localizer["ClinicName"]</th>
        <th>@Localizer["ClinicDescription"]</th>
        <th>@Localizer["Status"]</th>
        <th>@Localizer["Delete"]</th>
        <th>@Localizer["Update"]</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ClinicID</td>
            <td>@x.ClinicName</td>
            <td>@x.ClinicDescription</td>
            <td>@x.Status</td>
            <td><a href="/Clinic/ClinicDelete/@x.ClinicID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Clinic/ClinicGet/@x.ClinicID" class="btn btn-success">Update</a></td>
            
        </tr>
    }
</table>
<a href="/Clinic/ClinicAdd/" class="btn btn-primary">@Localizer["AddNewClinic"]</a>